  <select id="selectLatestUserLog" resultMap="BaseResultMap">
    select tu.*,tf.`path` as imgUrl from tb_user tu 
    left join (select user_id from tb_login_log tll order by login_time desc) a on tu.id = a.user_id
    left join tb_file tf on tu.img_id = tf.id 
    group by tu.id
